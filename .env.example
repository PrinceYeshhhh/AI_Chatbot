# =============================================================================
# AI CHATBOT ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# OpenAI API key for GPT models
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# API endpoint for chat completions
VITE_API_ENDPOINT=https://api.openai.com/v1/chat/completions

# Model to use for chat completions
VITE_MODEL_NAME=gpt-3.5-turbo

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum tokens per request
VITE_MAX_TOKENS=1000

# Temperature for response generation (0.0 - 2.0)
VITE_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Training Configuration
# -----------------------------------------------------------------------------
# Maximum number of training examples to store
VITE_MAX_TRAINING_EXAMPLES=10000

# Embedding dimensions for vector representations
VITE_EMBEDDING_DIMENSIONS=512

# Text chunk size for processing large documents
VITE_CHUNK_SIZE=1000

# Overlap between chunks to maintain context
VITE_CHUNK_OVERLAP=100

# Confidence threshold for intent classification
VITE_CONFIDENCE_THRESHOLD=0.7

# -----------------------------------------------------------------------------
# Machine Learning Configuration
# -----------------------------------------------------------------------------
# Enable GPU acceleration (if available)
VITE_USE_GPU=false

# Batch size for training
VITE_BATCH_SIZE=32

# Learning rate for model training
VITE_LEARNING_RATE=0.001

# Dropout rate for regularization
VITE_DROPOUT_RATE=0.1

# Number of attention heads in transformer
VITE_TRANSFORMER_HEADS=8

# Number of transformer layers
VITE_TRANSFORMER_LAYERS=6

# Hidden dimensions in neural networks
VITE_HIDDEN_DIMENSIONS=256

# Vocabulary size for tokenization
VITE_VOCABULARY_SIZE=50000

# -----------------------------------------------------------------------------
# Training Constraints
# -----------------------------------------------------------------------------
# Gradient clipping threshold
VITE_GRADIENT_CLIP_THRESHOLD=1.0

# Early stopping patience (epochs)
VITE_EARLY_STOPPING_PATIENCE=10

# Minimum delta for early stopping
VITE_MIN_DELTA=0.001

# Maximum sequence length
VITE_MAX_SEQUENCE_LENGTH=512

# -----------------------------------------------------------------------------
# Reinforcement Learning
# -----------------------------------------------------------------------------
# Reward decay factor
VITE_REWARD_DECAY=0.95

# Exploration rate for policy learning
VITE_EXPLORATION_RATE=0.1

# Frequency of policy updates
VITE_POLICY_UPDATE_FREQUENCY=100

# Human feedback weight
VITE_HUMAN_FEEDBACK_WEIGHT=1.0

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Storage type (localStorage, indexedDB, or external)
VITE_STORAGE_TYPE=localStorage

# Maximum storage size
VITE_MAX_STORAGE_SIZE=100MB

# Enable automatic cleanup of old data
VITE_AUTO_CLEANUP=true

# Data retention period in days
VITE_DATA_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Database Configuration (for production)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://chatbot:secure_password@localhost:5432/ai_chatbot

# Database connection pool size
DB_POOL_SIZE=10

# Database connection timeout
DB_TIMEOUT=5000

# Enable database migrations
DB_MIGRATE=true

# -----------------------------------------------------------------------------
# Redis Configuration (for caching)
# -----------------------------------------------------------------------------
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis key prefix
REDIS_PREFIX=ai_chatbot:

# Cache TTL in seconds
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Vector Database Configuration
# -----------------------------------------------------------------------------
# Qdrant server URL
QDRANT_URL=http://localhost:6333

# Collection name for embeddings
QDRANT_COLLECTION=chatbot_embeddings

# Vector similarity threshold
VECTOR_SIMILARITY_THRESHOLD=0.8

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=.csv,.pdf,.md,.txt,.json

# Upload directory
UPLOAD_DIR=./uploads

# Enable file virus scanning
ENABLE_VIRUS_SCAN=false

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# JWT secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Session timeout in minutes
SESSION_TIMEOUT=60

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Rate limit: requests per minute
RATE_LIMIT_RPM=100

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
# Enable debug mode
VITE_DEBUG_MODE=false

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Enable performance metrics
VITE_ENABLE_METRICS=true

# Enable error tracking
ENABLE_ERROR_TRACKING=true

# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn-here

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# Enable service worker for caching
ENABLE_SERVICE_WORKER=true

# Enable compression
ENABLE_COMPRESSION=true

# CDN URL for static assets
CDN_URL=

# Enable lazy loading
ENABLE_LAZY_LOADING=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable voice input
VITE_ENABLE_VOICE_INPUT=true

# Enable file attachments
VITE_ENABLE_FILE_ATTACHMENTS=true

# Enable conversation export
VITE_ENABLE_EXPORT=true

# Enable advanced analytics
VITE_ENABLE_ANALYTICS=true

# Enable A/B testing
ENABLE_AB_TESTING=false

# -----------------------------------------------------------------------------
# Third-party Integrations
# -----------------------------------------------------------------------------
# Google Analytics tracking ID
GOOGLE_ANALYTICS_ID=

# Mixpanel project token
MIXPANEL_TOKEN=

# Intercom app ID
INTERCOM_APP_ID=

# Stripe publishable key
STRIPE_PUBLISHABLE_KEY=

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Development server port
PORT=5173

# Enable hot module replacement
HMR=true

# Enable source maps
SOURCE_MAPS=true

# Enable TypeScript checking
TS_CHECK=true

# Enable ESLint
ESLINT=true

# Enable Prettier
PRETTIER=true