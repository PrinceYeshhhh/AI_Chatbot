# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://your-frontend-name.vercel.app
ALLOWED_ORIGINS=https://your-frontend-name.vercel.app

# Supabase Configuration
SUPABASE_URL=https://sllcpksxzbdhvlnuehju.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Security
JWT_SECRET=your_jwt_secret_here

# Optional Settings
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_REQUEST_LOGGING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=info

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Cache Configuration (Optional)
CACHE_PREFIX=chatbot:
REDIS_URL=your_redis_url_here

# Vector Store Configuration
CHROMA_COLLECTION_NAME=chatbot_embeddings

# API Documentation
API_BASE_URL=https://your-backend-name.onrender.com